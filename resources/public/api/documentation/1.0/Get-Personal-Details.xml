<endpoint>
  <name>Get Personal Details</name>
  <description>This endpoint retrieves a user's designatory details</description>
  <section id="resource">
    <title>Resource</title>
    <resource>/profile/personal-details/:nino</resource>
  </section>
  <section id="path-parameters">
    <title>Path Parameters</title>
    <table>
      <headings>
        <cell>Name</cell>
        <cell>Type</cell>
        <cell>Example</cell>
        <cell>Description</cell>
      </headings>
      <rows>
        <row>
          <cell><code>NINO</code></cell>
          <cell><code>String</code></cell>
          <cell><code>NS123456B</code></cell>
          <cell>The NINO for the individual.</cell>
        </row>
      </rows>
    </table>
  </section>
  <section id="authorisation">
    <title>Authorisation</title>
    <authorisation>
      <type>USER</type>
      <scope>read:customer-profile</scope>
    </authorisation>
  </section>
  <section id="content-types">
    <title>Accepted Media Types</title>
    <list>
      <item>
        <code>application/vnd.hmrc.1.0+json</code>
      </item>
    </list>
  </section>
  <section id="sample-response">
    <title>Response</title>
    <httpStatus>200 (OK)</httpStatus>
    <json><![CDATA[{
      "etag" : "etag12345",
      "person" : {
        "firstName" : "John",
        "middleName" : "Albert",
        "lastName" : "Smith",
        "title" : "Mr",
        "sex" : "M",
        "dateOfBirth" : 513774181935,
        "nino" : "YH261980B"
      }
}]]></json>
    <table>
      <headings>
        <cell>Name</cell>
        <cell>Type</cell>
        <cell>Example</cell>
        <cell>Description</cell>
      </headings>
      <rows>
        <row>
          <cell><code>NINO</code></cell>
          <cell><code>String</code></cell>
          <cell><code>KM569110B</code></cell>
          <cell>An example NINO.</cell>
        </row>
      </rows>
    </table>
  </section>
  <section id="error-responses">
    <title>Error Scenarios</title>
    <table>
      <headings>
        <cell>Error Scenario</cell>
        <cell>HTTP Status</cell>
        <cell>Code</cell>
      </headings>
      <rows>
        <row>
          <cell>Invalid NINO</cell>
          <cell><code>400 (Bad Request)</code></cell>
          <cell><code>NINO_INVALID</code></cell>
        </row>
      </rows>
    </table>
  </section>
</endpoint>